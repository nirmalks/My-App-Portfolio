<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nirmal.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appHeading"
        android:id="@+id/appHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/spotify"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/spotifyApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appHeading"
        android:layout_marginTop="40dp"
        android:onClick="spotifyClick"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/scoresApp"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/scoresApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spotifyApp"
        android:layout_marginTop="10dp"
        android:onClick="scoresClick"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFA000"
        android:text="@string/libraryApp"
        android:textAllCaps="true"
        android:id="@+id/libraryApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scoresApp"
        android:layout_marginTop="10dp"
        android:onClick="libraryClick"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/buildApp"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/builditApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/libraryApp"
        android:layout_marginTop="10dp"
        android:onClick="buildClick"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/xyzApp"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/xyzApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/builditApp"
        android:layout_marginTop="10dp"
        android:onClick="xyzClick"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/capstoneApp"
        android:textAllCaps="true"
        android:background="#673AB7"
        android:textColor="#ffffff"
        android:id="@+id/capstoneApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/xyzApp"
        android:layout_marginTop="10dp"
        android:onClick="capstoneClick"
        />

</RelativeLayout>
</ScrollView>