<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nirmal.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My NanoDegree Apps!"
        android:id="@+id/appHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/spotifyApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/appHeading"
        android:layout_marginTop="40dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/scoresApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spotifyApp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#FFA000"
        android:text="Library App"
        android:textAllCaps="true"
        android:id="@+id/libraryApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scoresApp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build it bigger"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/builditApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/libraryApp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="xyz reader"
        android:textAllCaps="true"
        android:background="#FFA000"
        android:id="@+id/xyzApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/builditApp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Capstone: My own app"
        android:textAllCaps="true"
        android:background="#673AB7"
        android:textColor="#ffffff"
        android:id="@+id/capstoneApp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/builditApp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
